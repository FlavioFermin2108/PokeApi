<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="pe.idat.pokeapi">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/pokedex"
        android:label="@string/app_name"
        android:roundIcon="@drawable/pokedex"
        android:supportsRtl="true"
        android:theme="@style/Theme.PokeApi"
        tools:targetApi="31">

    <activity
        android:name=".ActivityLogin"
        android:exported="true"
        android:logo="@drawable/pokedex">
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
    </activity>

    <activity
        android:name=".MainActivity"
        android:exported="false" />

    <activity
        android:name="pe.idat.pokeapi.models.PokemonDetailActivity"
        android:exported="false" />

</application>
    </manifest>
